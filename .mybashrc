# set command alias
if [ -f /usr/bin/nvim ]; then
  alias vi=nvim
  alias vim=nvim
fi

# set umask
umask 0002

# set PS1
export PS1='[\u@\h \W$(__git_ps1)]\$ '

# anyenv
PATH="${HOME}/.anyenv/bin:$PATH"
test -f ${HOME}/.anyenv/bin/anyenv && eval "$(anyenv init -)"

# NeoVim
export XDG_CONFIG_HOME=~/.config

export PATH
